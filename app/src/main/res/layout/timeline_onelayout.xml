<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    android:id="@+id/timeline_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    card:cardCornerRadius="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/user10" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:fontFamily="@font/aarial"
                android:gravity="center_vertical"
                android:text="  S I N A B R O"
                android:textColor="@color/sianbro_black_color" />

            <ImageButton
                android:id="@+id/timeline_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="22dp"
                android:layout_weight="0.7"
                android:background="#00ffffff"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/fold" />
        </LinearLayout>

        <!--â€‹<com.google.android.youtube.player.YouTubePlayerView-->
        <!--android:id="@+id/youtubeView"-->
        <!--layout_alignParentTop="true"-->
        <!--layout_centerHorizontal="true"-->
        <!--layout_marginTop="99dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="6"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginTop="31dp" />-->

        <FrameLayout
            android:id="@+id/youtubeView"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_centerHorizontal="false"
            android:layout_weight="8"
            android:visibility="visible" />
    </LinearLayout>
</android.support.v7.widget.CardView>
